<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:id="@+id/alarm_parent_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="12:00"
        android:textSize="35sp"
        android:textColor="#808080"
        android:textStyle="bold"
        android:id="@+id/alarm_item_time"
        android:src="@mipmap/ic_launcher"
        android:gravity="end|center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="AM"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        android:id="@+id/timePeriod"
        app:layout_constraintLeft_toRightOf="@id/alarm_item_time"
        app:layout_constraintBottom_toBottomOf="@id/alarm_item_time"/>

    <TextView
        android:id="@+id/alarm_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:textSize="15sp"
        android:textColor="#000"
        android:layout_marginTop="25sp"
        android:text="TEST ALARM TEXT"
        app:layout_constraintLeft_toRightOf="@id/alarm_item_time"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S   M   T   W   T   F   S"
        android:id="@+id/timeDays"
        android:textSize="13sp"
        android:layout_marginStart="70dp"
        app:layout_constraintTop_toBottomOf="@id/alarm_item_text"
        app:layout_constraintLeft_toRightOf="@id/alarm_item_time"/>

</android.support.constraint.ConstraintLayout>